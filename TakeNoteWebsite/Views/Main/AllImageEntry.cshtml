@using TakeNoteWebsite.Models.Data
@model List<Image>

<link rel="stylesheet" href="~/css/Image.css">
<div class="imageBrowsingContainer">
    @if (Model.Count == 0)
    {
        <div class="alert alert-info" style="width: 80%; height: 10%; position: fixed; top: 10%; left: 10%; display: flex; justify-content: center; animation-duration: 4s;">
            This entry does't have any folders to display
        </div>
    }
    else
        foreach (Image image in Model)
        {
            @Html.Partial("_PartialImage", image)
        }
</div>